			inset="-3 0 0 0"
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="White"
			font-style=uppercase
			bgcolor=none
			
			render_bg
			{
				// background fill
				0="gradient( x0 + 1, y0 + 1, x1 - 1, y1 - 1, DialogBG, propertysheetbg )"


