	layout
	{
		// Y offset here should match the vertical padding value above in the colors section
		region { name="header" y=0 x=0 width=max height=max }

		place { 
			control=launchbutton
			region=header
			dir=right
			align=middle
			margin-left=10
			margin-right=0
			margin-top=10
			margin-bottom=10
			spacing=0
		}
		place { 
			start=launchbutton
			control=clientlist
			region=header
			dir=right
			align=middle
			margin-left=0
			margin-right=0
			spacing=0
		}
		place { 
			start=clientlist
			control=subheaderlabels
			region=header
			dir=right
			align=middle
			margin-left=10
