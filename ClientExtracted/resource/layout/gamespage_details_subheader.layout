			font-weight=400
			textcolor="white"
			font-style=uppercase
			bgcolor=none
			
			render_bg
			{
				// background fill
				0="gradient( x0 + 1, y0 + 1, x1 - 1, y1 - 1, inbox_active2, almostblack )"

			}	
		}
		
		DetailsButton:active
