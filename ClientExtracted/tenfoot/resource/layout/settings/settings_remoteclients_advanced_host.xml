<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/settings.css" />
	</styles>

	<SettingsPanel_RemoteClients_AdvancedHost class="SettingsModal" defaultfocus="EnableHardwareEncoding" tabindex="auto" selectionpos="auto">

		<!-- top header panel -->
		<Panel class="SettingsHeader">
			<Label class="SettingsHeaderLegend" text="#Settings_RemoteClients_AdvancedHostOptions_Title" />
		</Panel>

		<!-- main panel -->
		<Panel class="SettingsContent SettingsCenterContentWide">
			<Label text="#Settings_RemoteClients_AdvancedHostOptions_Description" />
			
			<Panel class="SettingsContentFlowRight">
				<Panel class="SettingsLeftContentWide" >
					<ToggleButton class="CheckBox" id="EnableHardwareEncoding" onactivate="ToggleHardwareEncoding()" text="#Settings_RemoteClients_EnableHardwareEncoding" />
					<ToggleButton class="CheckBox" id="EnableDWMCapture" onactivate="ToggleDWMCapture()" text="#Settings_RemoteClients_EnableDWMCapture" />
					
					<Panel class="Spacer" />
					<Label class="SettingsLabel" text="#Settings_RemoteClients_EnableTrafficPriority_Description" />
					<ToggleButton class="CheckBox" id="EnableTrafficPriority" onactivate="ToggleTrafficPriority()" text="#Settings_RemoteClients_EnableTrafficPriority" />
				</Panel>
			</Panel>
		</Panel>
		
	</SettingsPanel_RemoteClients_AdvancedHost>
</root>
