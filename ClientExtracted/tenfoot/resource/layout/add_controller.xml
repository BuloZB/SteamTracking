<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/mainmenu.css" />
		<include src="file://{resources}/styles/msgbox.css" />

	</styles>

	<AddController class="TenfootMsgBox" defaultfocus="ButtonCancel" tabindex="auto" selectionpos="auto">
		<Panel id="MsgBoxBodyRegion" class="MsgBoxBodyRegion">
			<Panel id="MsgBoxHeader" class="MsgBoxHeader">
				<Label id="Title" class="Title" text="#SteamUI_AddController_Title" />
			</Panel>

			<Label id="AddController0" class="StdLabelMedBlue" text="#SteamUI_AddController_HowToConnect" />	          
			<Label id="AddController1" class="StdLabelMedBlue" text="#SteamUI_AddController_HowToPair1" />	          
			<Label id="AddController2" class="StdLabelMedBlue" text="#SteamUI_AddController_HowToPair2" />
	
			<Panel id="MsgBoxButtonArea" class="MsgBoxButtonArea">
				<Panel id="MsgBoxButtons">
					<Button id="ButtonCancel" class="ButtonCancel MsgBoxButton" onactivate="ButtonCancel();">
						<Label id="CancelButtonText" text="#UI_Cancel" />
					</Button>
				</Panel>
			</Panel>
		</Panel>
	</AddController>
</root>
